hint()
  display none
  font-size 14px
  min-width 180px
  border-radius 10px
  position absolute
  bottom 100%
  left 50%
  transform translate(-50%, -8px)
  background-color #ffffff
  color #000000
  text-align center
  padding 10px 25px
  box-shadow 0px 8px 16px #e7e7e7
  &::after
    content ''
    position absolute
    width 10px
    height 10px
    bottom -4px
    left 0
    right 0
    margin 0 auto
    background-color #fff
    transform rotate(45deg)
