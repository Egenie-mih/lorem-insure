.benefits-statistics
  width 290px
  margin 0 auto
  &__benefits
    width 290px
    padding-bottom 12px
    border-bottom 1px solid #e4e4e4
    & li
      align-items center
  &__statistics
    padding-top 27px
    width 290px
    & li
      align-items baseline
  &__title
    width 100%
    font-weight 400
    font-size 18px
    margin-bottom 27px
    color #000000
  & p
    width 230px
    font-size 14px
    line-height 18px
    color gray
  &__numbers
    font-size 24px
    color gray
    max-width 50px
  &_image
    max-width 50px
    & img
      max-width 40px
      height auto
  & li
    display flex
    flex-direction row
    justify-content space-between
    margin-bottom 20px


@media tablet-small-widths
  .benefits-statistics
    width 688px
    display flex
    flex-wrap wrap
    flex-direction row
    align-items flex-start
    justify-content space-between
    &__benefits
      border none
    &__statistics
      padding-top 0



@media tablet-large-widths
  .benefits-statistics
    width 914px
    flex-direction column
    text-align center
    justify-content flex-start
    &__benefits
      width 100%
      border-bottom 1px solid #e4e4e4
    &__list
      width 100%
      display flex
      flex-direction row
      justify-content space-between
    &__statistics
      width 100%
      padding-top 27px
    & li
      width 160px
      flex-direction column
      align-items center
      justify-content flex-start
    & p
      width 160px
      margin-top 20px


@media desktop-widths
  .benefits-statistics
    width 220px
    text-align left
    &__list
      flex-direction column
    & li
      width 100%
      flex-direction row
      justify-content space-between
    & p
      width 150px
      margin-top 0
