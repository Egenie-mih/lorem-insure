.subheader
  text-align center
  margin 0 auto
  color #ffffff
  &__title
    font-size 40px
    font-weight 400
    margin-top 0
    margin-bottom 17px
  &__description
    margin 0
    font-size 16px
    line-height 24px
    font-family 'PT Serif', 'Times New Roman', serif
    font-style italic
    font-weight 400
    max-width 665px
    margin 0 auto
  &--main
    padding 43px 0
  &--insure-selection
    padding 45px 28px 65px
    background-image url('../img/bg-tourism.jpg')
    background-position-y bottom
    background-position-x -400px
    background-repeat no-repeat
  &__wrapper
    max-width 500px
    margin 0 auto

@media (min-width: 400px)
  .subheader
    &--insure-selection
      background-position-x center
@media tablet-small-widths
  .subheader
    &--insure-selection
      padding 100px 0 110px
@media tablet-large-widths
  .subheader
    &--insure-selection
      background-position-x 0
      background-image url('../img/bg-tourism-desktop.jpg')
@media desktop-widths
  .subheader
    &--insure-selection
      background-position-x center
