.page-header
  background-color #fff
  padding 20px 0 21px
  &__wrapper
    max-width 1600px
    margin 0 auto
    padding 0 32px
    box-sizing border-box
    display flex
    justify-content space-between
    align-items center
  &__logo
    width 33.3%
    display block
    text-align center
    & img
      width 199px
      height auto
  &__contacts
    display none
.main-navigation
    &__burger
      & span
        display none
    &__burger-button
      position relative
      font-size 0
      margin-right 24px
      background-color transparent
      border 0
      width 20px
      height 16px
      &::before
        position absolute
        top -4px
        left 2px
        width 20px
        height 2px
        content ''
        transform rotate(0)
        background-color #000
        box-shadow 0 6px 0 0 #000000, 0 12px 0 0 #000000
      &:hover::before
        background-color violet
        box-shadow 0 6px 0 0 violet, 0 12px 0 0 violet


@media tablet-small-widths
  .main-navigation
      width 33.3%
      &__burger
        display flex
        align-items center
      & span
        display block
        font-size 14px
      &__burger-button
        &::before
          top 0px
  .page-header
    &__contacts
      display flex
      flex-direction column
      align-items flex-end
      width 33.3%
      text-align right
      &-tel
        display block
        text-decoration none
        font-size 19px
        line-height 20px
        margin-bottom 4px
        color #000
      &-callback
        display inline-block
        width auto
        color gray
        text-decoration none
        font-size 12px
        line-height 14px
        border-bottom 1px dashed #737373
        position relative
        &:hover
          color violet
          border-color violet
          & svg
            fill violet
        & svg
          position absolute
          left -10px
          top 0.4em
          fill gray
          transform rotate(-90deg)
          height 8px
          width auto
